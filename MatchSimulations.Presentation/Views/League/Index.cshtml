<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Football League Simulation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f0f0f0;
        }

        h2 {
            color: #007BFF;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
            color: #007BFF;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        input[type="text"],
        input[type="number"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        button[type="submit"] {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
            }

        .sorted-table {
            margin-top: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding: 20px;
        }

            .sorted-table h3 {
                color: #007BFF;
                margin-bottom: 10px;
            }

            .sorted-table table {
                width: 100%;
                border-collapse: collapse;
            }

            .sorted-table th, .sorted-table td {
                border: 1px solid #ccc;
                padding: 10px;
                text-align: center;
            }

            .sorted-table th {
                background-color: #f2f2f2;
                color: #007BFF;
                font-weight: bold;
            }

            .sorted-table tbody tr:nth-child(even) {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>
    <h2>League Simulation</h2>
    <h3>Please enter the names and strengths of the teams</h3>

    <form method="post">
        <table>
            <thead>
                <tr>
                    <th>Team Name</th>
                    <th>Strength (1-10)</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 4; i++)
                {
                    <tr>
                        <td>
                            <input type="text" name="teams[@i].Name" required pattern="[A-Za-z0-9\s]+" />
                            <span style="color:red; font-size: 12px;" hidden>This field is required and should contain letters, numbers, or spaces only.</span>
                        </td>
                        <td>
                            <input type="number" name="teams[@i].Strength" required min="1" max="10" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit">Simulate Matches</button>
    </form>

    @if (Model != null && Model.Count > 0)
    {
        <div class="sorted-table">
            <h3>League Result</h3>
            <table>
                <thead>
                    <tr>
                        <th>Position</th>
                        <th>Team</th>
                        <th>Matches Played</th>
                        <th>Wins</th>
                        <th>Draws</th>
                        <th>Losses</th>
                        <th>Goals For</th>
                        <th>Goals Against</th>
                        <th>Goal Difference</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var team = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@team.Name</td>
                            <td>@team.MatchesPlayed</td>
                            <td>@team.Wins</td>
                            <td>@team.Draws</td>
                            <td>@team.Losses</td>
                            <td>@team.GoalsFor</td>
                            <td>@team.GoalsAgainst</td>
                            <td>@team.GoalDifference</td>
                            <td>@team.Points</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</body>
</html>
